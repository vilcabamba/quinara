<div class="evaluacion row-fluid">
  <div class="span6">
    <div class="evaluacion_nombre"><%= evaluacion.nombre %></div>
    <div>
      <small>Creada <%= l evaluacion.created_at, format: :short %> (hace <%= time_ago_in_words evaluacion.created_at %>)</small>
    </div>
    <div>
      <%= link_to "", edit_course_evaluacion_path(@course, evaluacion), :class => "editar_edit ttip btn-mini", title: "Editar" %>
      <%= link_to "", course_evaluacion_path(@course, evaluacion), :class => "mostrar_show ttip btn-mini", title: "Mostrar" %>
      <% if evaluacion.has_preguntas_to_calificar? %>
        <%= link_to "", calificar_course_evaluacion_path(@course, evaluacion), :class => "pencil_button ttip btn-mini", title: "Calificar preguntas" %>
      <% end %>
      <%= link_to "", [ @course, evaluacion ], :method => :delete, :confirm => "¿Estás seguro que desea eliminar "+evaluacion.nombre+"?", :class => "delete_destroy ttip btn-mini", title: "Eliminar" %>
    </div>
  </div>
  <div class="span6">
    <div>
      <%= pluralize evaluacion.secciones.count, "sección", "secciones" %>,
      <%= pluralize evaluacion.questions.count, "pregunta", "preguntas" %>
    </div>
    <div>Respondida por <%= pluralize evaluacion.users.count, "persona", "personas" %></div>
    <div><%= link_to "Ver respuestas", course_evaluacion_respuestas_path(@course, evaluacion), :class => "btn btn-mini" %></div>
  </div>
</div>
