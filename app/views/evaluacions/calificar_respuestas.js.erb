(function (){
  var $node = $("<span />", {class: "text-success align_right", html: "<small>Guardado</small>"});
  var $answer = $(".user_answer_<%= @user_answer.id %>");
  $answer.addClass("highlighted");
  $answer.find(".feedback_text").html($node);
  setTimeout(function (){
    $node.fadeOut();
    $answer.removeClass("highlighted");
  }, 1000);
})();
