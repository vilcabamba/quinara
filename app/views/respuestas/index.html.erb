<%= breadcrumb [{link: "/", text: "Cursos"}, {link: "/courses/#{@course.id}/", text: "#{@course.nombre}"}, {link: "/courses/#{@course.id}/evaluaciones/", text: "Evaluaciones"}, {text: "#{@evaluacion.nombre}"}] %>

<div class="align_center">
  <h1><%= @course.nombre %></h1>
</div>

<h2><%= @evaluacion.nombre %></h2>

<h3>Respuestas</h3>

<table class="datos">
  <thead>
    <tr>
      <th>Persona</th>
      <th>Nota</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= image_tag user.imagen_url(:tiny), :class => "profile_image tiny" %>
          <%= user.nombres_o_username %>
        </td>
        <td>
          <%= @evaluacion.score_for user %>
          <%= link_to "ver evaluaciÃ³n", course_evaluacion_respuesta_path(@course, @evaluacion, user), :class => "btn btn-mini" %>
