<div class="align_center">
  <%= form_tag sessions_path, :class => "form-signin" do %>
    <h2 class="form-signin-heading">Inicia Sesión</h2>
    <%= text_field_tag :username, params[:username], :placeholder => "Nombre de usuario", :class => "form-control", :required => true %>
    <%= password_field_tag :password, nil,:placeholder => "Contraseña", :class => "form-control", :required => true %>
    <%= submit_tag "Iniciar sesión", :class => "btn btn-lg btn-primary btn-block", data: {disable_with: "Autenticando.."}  %>
  <% end %>
</div>
