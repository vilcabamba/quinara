<%= breadcrumb [{text: "Cursos"}] %>

<% if @courses[:teacher].empty? and @courses[:student].empty? %>
  <h3>No perteneces a ning√∫n curso</h3>
<% end %>

<% if @courses[:teacher].any? %>
  <h3>Profesor</h3>
  <% @courses[:teacher].each do |course| %>
    <%= render "course", course: course %>
  <% end %>
<% end %>

<% if @courses[:student].any? %>
  <h3>Alumno</h3>
  <% @courses[:student].each do |course| %>
