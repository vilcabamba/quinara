(function (){
  var table_selector = "#<%= @added ? 'encurso' : 'no' %> table";
  var table = $(table_selector).dataTable();
  table.fnDestroy();
  $("#user_<%= @user.id %>").remove();
  $("#<%= @added ? 'encurso' : 'no' %> tbody").append("<%= j render 'alumno', alumno: @user, en_curso: @added %>");
  $(table_selector).dataTable();
})();

