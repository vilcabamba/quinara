<table class="datos table table-hover">
  <thead>
    <tr>
      <th>Alumno</th>
      <th></th>
    </tr>
  </thead>

<% alumnos.each do |alumno| %>
  <tr>
    <td><%= alumno.info_for_select %></td>
    <td>
      <% if en_curso %>
        <%= link_to "Eliminar", toggle_course_alumno_path(@course, alumno) ,:method => :POST ,:class => "delete_destroy" %>
      <% else  %>
        <%= link_to "Agregar", toggle_course_alumno_path(@course, alumno) ,:method => :POST  ,:class => "crear_nuevo" %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>
