  <tr id="user_<%= alumno.id %>">
    <td><%= alumno.info_for_select %></td>
    <td>
      <% if en_curso %>
        <%= link_to "Eliminar", toggle_course_alumno_path(@course, alumno), :method => :post, :class => "delete_destroy", remote: true %>
      <% else  %>
        <%= link_to "Agregar", toggle_course_alumno_path(@course, alumno), :method => :post, :class => "crear_nuevo", remote: true %>
      <% end %>
    </td>
  </tr>
