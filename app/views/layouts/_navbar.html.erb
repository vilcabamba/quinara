<% if current_user %>
  <div class="navbar">
    <div class="navbar-inner">
      <%= link_to image_tag("/img/logo ok.png"), root_path, class:"brand_img" %>
      <ul class="nav">
        <li <%= navbar_active_class "home" %>>
          <a href="/">Cursos</a>
        </li>
      </ul>
      <ul class="nav pull-right">
        <li class="divider-vertical"></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= image_tag current_user.imagen_url(:tiny), :class => "profile_image tiny" %>
            <%= current_user.nombres_o_username %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% if current_user.admin %>
              <li>
                <a href="/admin">Administración</a>
              </li>
              <li class="divider"></li>
            <% end %>
            <li>
              <%= link_to "Mi perfil", me_index_path %>
            </li>
            <li class="divider"></li>
            <li>
              <a href="/logout">Cerrar sesión</a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
<% end %>
