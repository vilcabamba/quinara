<div class="question">
  <div class="question_title">
    <strong>
      <%= literal index %>.
    </strong>
    <%= question.texto %>
    <small>(<%= pluralize (number_to_human question.puntaje_maximo, precision: 2), "punto", "puntos" %>)</small>
  </div>
  <% if question.media? %>
    <div class="align_center question_media">
      <%= show_media_for question %>
    </div>
  <% end %>
  <div class="question_answers">
    <% if question.kind == "Seleccionar una opciÃ³n" %>
      <% question.answers.each do |answer| %>
        <%= render "answers/answer", answer: answer, question_id: question.id %>
      <% end %>
    <% elsif question.kind == "Verdadero o Falso" %>
      <%= render "answers/true_false", question_id: question.id %>
    <% elsif question.kind == "Escriba la respuesta" %>
      <%= render "answers/write_answer", question_id: question.id %>
    <% elsif question.kind == "Escoja la respuesta" %>
      <%= render "answers/choose_answer", question: question %>
    <% end %>
  </div>
</div>
