
  <div class="field">
    <%= f.label :texto, "Texto" %>
    <%= f.text_field :texto, placeholder: "Pregunta" %>
  </div>

  <div class="field">
    <%= f.label :puntaje_maximo, "Puntaje" %>
    <%= f.number_field :puntaje_maximo, :step => "any", :min => 0, placeholder: "¿Sobre cuánto se califica esta pregunta?" %>
  </div>

  <%= f.fields_for :answers do |b| %>
    <%= render 'answers/form', f: b %>
  <% end -%>
  
  <div class="actions"><%= f.link_to_add "Respuesta", :answers, :class => "crear_nuevo" %></div>

  <div class="actions"><%= f.link_to_remove "Pregunta", :class => "delete_destroy" %></div>

